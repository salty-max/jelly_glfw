  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-std=c++23",
        "-m64",
        "-fdiagnostics-color=always",
        "-g",
        "-I${workspaceFolder/deps/include}",
        "-I${workspaceFolder/deps/imgui}",
        "-I${workspaceFolder/deps/imgui/backends}",
