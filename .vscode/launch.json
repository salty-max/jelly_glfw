{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/build/bin/sandbox.exe",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "preLaunchTask": "C/C++: g++.exe build active file"
